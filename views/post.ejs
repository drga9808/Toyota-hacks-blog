<!---------------------------- Header ---------------------------->
<%- include('partials/header.ejs') %>

  <section class="container post">

    <!-- Title -->
    <h1>
      <%= post.title %>
    </h1>

    <!-- Span & Edit -->
    <div
      class="d-flex flex-column flex-md-row justify-content-md-between align-items-start align-items-md-center gap-4 pb-md-2 pt-1">
      <p class="post-meta mb-0">
        <span>📅 <%= post.date %></span> ·
        <span>📂 <%= post.category %></span> ·
        <span>⏱ <%= post.readTime %></span>
      </p>
      <% if (post.createdBy===currentUser) { %>
        <form class="post-edit-button" action="/post/edit/<%= slug %>" method="GET">
          <button type="submit" class="btn-edit">✏️ Edit</button>
        </form>
        <% } %>
    </div>

    <p class="post-user pt-2">
      <span>
        <strong>Created by: </strong><%= users[post.createdBy]?.name %>
      </span>
    </p>

    <!-- Image -->
    <img class="post-img" src="<%= post.image %>" alt="<%= post.title %>">

    <!-- Content -->
    <div class="post-content"><%- post.content %></div>

    <!-- Back to home button -->
    <div class="back-link-wrapper">
      <a class="back-link" href="/">← Back to home</a>
    </div>
  </section>

  <!---------------------------- Footer ---------------------------->
  <%- include('partials/footer.ejs') %>